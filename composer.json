{
  "name": "alex-patterson-webdev/date-time",
  "version": "1.1.0",
  "minimum-stability": "dev",
  "prefer-stable": true,
  "license": "MIT",
  "authors": [
    {
      "name": "Alex Patterson",
      "email": "alex.patterson.webdev@gmail.com"
    }
  ],
  "require" : {
    "php" : ">=7.4",
    "alex-patterson-webdev/factory": "^1"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.1",
    "squizlabs/php_codesniffer": "3.*",
    "phpmd/phpmd" : "@stable",
    "friendsofphp/php-cs-fixer": "^2.16"
  },
  "autoload": {
    "psr-4": {
      "Arp\\DateTime\\" : "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "ArpTest\\DateTime\\" : "test/phpunit/"
    }
  },
  "repositories": [
    {
      "type": "composer",
      "url": "http://dev.satis.local"
    }
  ],
  "scripts": {
    "test": "php vendor/bin/phpunit --coverage-clover=coverage.xml"
  },
  "config": {
    "secure-http": false,
    "preferred-install": "dist",
    "optimize-autoloader": true,
    "sort-packages": true
  }
}
