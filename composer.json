{
  "name": "alex-patterson-webdev/date-time",
  "description": "Components for creating PHP DateTime objects",
  "minimum-stability": "dev",
  "prefer-stable": true,
  "license": "MIT",
  "authors": [
    {
      "name": "Alex Patterson",
      "email": "alex.patterson.webdev@gmail.com"
    }
  ],
  "require" : {
    "php" : ">=7.4",
    "alex-patterson-webdev/factory": "dev-feature/2.0.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.3"
  },
  "autoload": {
    "psr-4": {
      "Arp\\DateTime\\" : "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "ArpTest\\DateTime\\" : "test/phpunit/"
    }
  },
  "scripts": {
    "test": "php vendor/bin/phpunit --coverage-clover=coverage.xml"
  },
  "config": {
    "preferred-install": "dist",
    "optimize-autoloader": true,
    "sort-packages": true
  }
}
